# Clang 16.0.0 / default
build:clang --crosstool_top=//toolchain:clang_suite
build:clang --cpu=amd64
build:clang --host_crosstool_top=@bazel_tools//tools/cpp:toolchain
build:clang --@rules_cuda//cuda:compiler='clang'
build:clang --@rules_cuda//cuda:runtime=@local_cuda//:cuda_runtime_static
build:clang --@rules_cuda//cuda:copts='-stdlib=libc++'
build:clang --@rules_cuda//cuda:copts='--offload-arch=native'
build:clang --@rules_cuda//cuda:copts='-I/usr/local/llvm/include/c++/v1'

build:cuda --@rules_cuda//cuda:copts='-allow-unsupported-compiler'
build:cuda --cxxopt='-std=c++20'
build:cuda --host_cxxopt='-std=c++20'